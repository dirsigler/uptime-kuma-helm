{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":disableDependencyDashboard", ":enablePreCommit"],
  "timezone": "Europe/Berlin",
  "schedule": ["at any time"],
  "assignees": ["dirsigler"],
  "reviewers": ["dirsigler"],
  "enabledManagers": ["helmv3", "pre-commit", "helm-values", "github-actions"],
  "pre-commit": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": ["pre-commit", "github-actions"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "all",
      "automerge": false
    },
    {
      "matchManagers": ["helmv3"],
      "matchDatasources": ["helm"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "all",
      "automerge": false,
      "postUpgradeTasks": {
        "commands": ["./scripts/bump-chart-version.sh"],
        "executionMode": "branch"
      }
    },
    {
      "matchManagers": ["helm-values"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "all",
      "automerge": false,
      "postUpgradeTasks": {
        "commands": ["./scripts/update-app-version.sh"],
        "executionMode": "branch"
      }
    }
  ]
}